   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            type="import"
            wizardId="org.eclipse.ui.wizards.import.ZipFile">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            menuGroupId="zBottom"
            type="export"
            wizardId="org.eclipse.ui.wizards.export.ZipFile">
         <enablement></enablement>
      </commonWizard>
