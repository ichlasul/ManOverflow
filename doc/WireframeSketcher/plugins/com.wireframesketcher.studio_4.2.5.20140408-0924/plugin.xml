   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.wireframesketcher.studio.vcsPluginsInstalled">
         <with
               variable="org.eclipse.core.runtime.Platform">
            <or>
               <test
                     args="org.tigris.subversion.subclipse.ui"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="org.eclipse.team.svn.ui"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="org.eclipse.team.cvs.ui"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="org.eclipse.egit"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="com.vectrace.MercurialEclipse"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="com.microsoft.tfs.client.eclipse.ui"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="com.perforce.team.ui"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="com.dynamsoft.sawplugin"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="com.codicesoftware.eclipse"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
               <test
                     args="com.accurev.eclipse.core"
                     property="org.eclipse.core.runtime.isBundleInstalled">
               </test>
            </or>
         </with>
      </definition>
      <definition
            id="com.wireframesketcher.studio.cvsPluginInstalled">
         <with
               variable="org.eclipse.core.runtime.Platform">
            <test
                  args="org.eclipse.team.cvs.ui"
                  property="org.eclipse.core.runtime.isBundleInstalled">
            </test>
